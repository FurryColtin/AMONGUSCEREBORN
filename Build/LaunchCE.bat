@ECHO OFF
SET EXE_NAME=Among Us.exe
SET VARIABLE_STORE_DIR=%1Bin
SET VARIABLE_STORE=%VARIABLE_STORE_DIR%\GamePath.txt

:VERIFY
SET /P DEST=<"%VARIABLE_STORE%"	
IF "%DEST%" == "" GOTO SET_PROGRAM
IF NOT EXIST "%DEST%\%EXE_NAME%" GOTO ERROR_NOT_EXIST
GOTO LAUNCH_PROGRAM

:ERROR_NOT_EXIST
@ECHO "%DEST%\%EXE_NAME%" does not exist!
GOTO SET_PROGRAM

:SET_PROGRAM
SET /P INPUT=Application Directory Path: 
MKDIR %VARIABLE_STORE_DIR%
@ECHO %INPUT%>%VARIABLE_STORE%
GOTO VERIFY

:LAUNCH_PROGRAM
@ECHO "%DEST%\%EXE_NAME%"
START "" "%DEST%\%EXE_NAME%"